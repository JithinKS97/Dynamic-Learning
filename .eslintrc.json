{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "meteor": true
  },
  "plugins": ["meteor"],
  "extends": ["airbnb", "plugin:meteor/recommended"],
  "rules": {
    "import/no-unresolved": ["error", { "ignore": ["^meteor/"] }]
  }
}
